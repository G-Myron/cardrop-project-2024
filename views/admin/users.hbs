
<section class="container">
  <h2 class="text-center my-5">Users</h2>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-primary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Surname</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{add @index (add ../skip 1)}}</td>
          <td>{{name}}</td>
          <td>{{surname}}</td>
          <td>{{email}}</td>
          <td>{{tel}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <form method="post">
    <input name="page" value={{page}} hidden>
    <input name="limit" value={{limit}} hidden>
    <ul class="pagination justify-content-end">
      <li class="page-item">
        <button class="page-link" name="prev" value="1">Prev.</button>
      </li>
      <li class="page-item">
        <button class="page-link" name="next" value="1">Next</button>
      </li>
    </ul>
  </form>

</section>
