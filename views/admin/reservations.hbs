
<section class="container">
  <h2 class="text-center my-5">Reservations</h2>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-primary">
        <tr>
          <th scope="col">#</th>
          <th scope="col">User</th>
          <th scope="col">From</th>
          <th scope="col">To</th>
          <th scope="col">Category</th>
          <th scope="col">Location</th>
          <th scope="col">Canceled</th>
          <th scope="col">Car plate</th>
          <th scope="col">Rating</th>
        </tr>
      </thead>
      <tbody>
        {{#each reservations}}
        <tr>
          <td>{{add @index (add ../skip 1)}}</td>
          <td>{{user}}</td>
          <td>{{localDate dateFrom}}</td>
          <td>{{localDate dateTo}}</td>
          <td>{{category}}</td>
          <td>{{location}}</td>
          <td>{{canceled}}</td>
          <td>{{carPlate}}</td>
          <td>{{rating}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <form method="post">
    <input name="page" value={{page}} hidden>
    <input name="limit" value={{limit}} hidden>
    <ul class="pagination justify-content-end">
      <li class="page-item">
        <button class="page-link" name="prev" value="1">Prev.</button>
      </li>
      <li class="page-item">
        <button class="page-link" name="next" value="1">Next</button>
      </li>
    </ul>
  </form>

</section>
