<header class="navbar navbar-expand-md sticky-top bg-primary" style="z-index: 1030;">
  <nav class="container navbar navbar-dark flex-wrap flex-md-nowrap">
    <div class="container-fluid justify-content-md-between">
      <a class="navbar-brand" href="/" tabindex="-1">
        <img src="/logo.png" alt="Logo" height="40px" class="me-3">
        Rent A Car
      </a>
      <div class="d-flex align-items-center gap-4 gap-md-5" style="color: var(--bs-navbar-color);">
        {{#if logged_in_user}}
        <div class="nav-item dropdown">
          <button class="nav-link dropdown-toggle d-flex align-items-center gap-1" data-bs-toggle="dropdown">
            <img src="/images/profile.jpg" alt="profile" class="rounded-circle" height="30"/>
            <span class="d-inline-block text-truncate" style="max-width: 7em;">{{logged_in_user.name}} {{logged_in_user.surname}}</span>
          </button>
          <ul class="dropdown-menu dropdown-menu-end shadow">
            {{#unless (eq logged_in_user.role "admin")}}
            <a class="dropdown-item {{#if reserv}}active{{/if}}" href="/user/my_reservations">
              <i class="bi bi-journals me-1"></i>
              My reservations
            </a>
            <a class="dropdown-item {{#if edit}}active{{/if}}" href="/user/edit">
              <i class="bi bi-pencil-fill me-1"></i>
              Edit profile
            </a>
            {{else}}
            <a class="dropdown-item {{#if edit}}active{{/if}}" href="/admin/users">
              <i class="bi bi-people me-1"></i>
              Users
            </a>
            <a class="dropdown-item {{#if edit}}active{{/if}}" href="/admin/cars">
              <i class="bi bi-car-front-fill me-1"></i>
              Cars
            </a>
            <a class="dropdown-item {{#if reserv}}active{{/if}}" href="/admin/reservations">
              <i class="bi bi-journals me-1"></i>
              Reservations
            </a>
            {{/unless}}

            <hr class="m-2">
            <a class="dropdown-item" href="/auth/logout">
              <i class="bi bi-box-arrow-right me-1"></i>
              Logout
            </a>
          </ul>
        </div>
        {{/if}}
        {{>helpers/color_mode}}
      </div>
    </div>
  </nav>
</header>
