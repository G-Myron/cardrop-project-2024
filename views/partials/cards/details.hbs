<div class="d-flex flex-wrap gap-3">
  <div class="flex-shrink-0">
    <img src="/images/category/{{name}}.jpg" alt="Car: {{name}}" class="img-fluid rounded" width={{ifexists imgWidth 300}}>
  </div>
  <div class="flex-grow-1 d-grid align-content-between">
    <div class="d-flex justify-content-between">
      <div>
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text mb-2">like {{like}}</p>
      </div>
      <div>
        <h2 class="mb-0 me-3">{{price}}â‚¬</h2>
        <p class="mb-0" style="font-size:.8em">for {{days}} days</p>
      </div>
    </div>
    <div class="d-flex justify-content-evenly rounded-3 p-2 mb-2 gap-1 bg-body-secondary">
      <div>
        <p class="small text-muted mb-1">CC</p>
        <p class="">{{cc}}</p>
      </div>
      <div>
        <p class="small text-muted mb-1">Seats</p>
        <p class="">{{seats}}</p>
      </div>
      <div class="px-3">
        <p class="small text-muted mb-1">Doors</p>
        <p class="">{{doors}}</p>
      </div>
      <div>
        <p class="small text-muted mb-1">Transmition</p>
        <p class="">{{transmition}}</p>
      </div>
      <div>
        <p class="small text-muted mb-1">Bags</p>
        <p class="">{{bags}}</p>
      </div>
    </div>
    {{#if isBrief}}
      <div class="d-flex justify-content-between align-items-center p-1 w-100 pb-0">
        Availiability: {{availiability}}
        <a href="/vehicle/{{name}}?city={{city}}&from={{dateFrom}}&to={{dateTo}}" class="btn btn-primary px-4">See details</a>
      </div>
    {{/if}}
  </div>
</div>