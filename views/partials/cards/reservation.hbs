<section class="card m-lg-5">
  <div class="card-body p-4">
    <div class="d-flex flex-wrap">
      <div class="flex-shrink-0">
        <img src="/images/car.jpg" alt="Car: {{title}}" class="img-fluid rounded" width="300">
      </div>
      <div class="flex-grow-1 ms-3">
        <div class="d-flex justify-content-between">
          <div>
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text mb-2">like Alfa Romeo Giulia</p>
          </div>
          <div>
            <h2 class="mb-0 me-3">{{price}}â‚¬</h2>
            <p class="mb-0" style="font-size:.8em">for 3 days</p>
          </div>
        </div>
        <div class="d-flex justify-content-evenly rounded-3 p-2 mb-2 gap-1 bg-body-secondary">
          <div>
            <p class="small text-muted mb-1">Seats</p>
            <p class="">4</p>
          </div>
          <div class="px-3">
            <p class="small text-muted mb-1">Doors</p>
            <p class="">5</p>
          </div>
          <div>
            <p class="small text-muted mb-1">Transmition</p>
            <p class="">Manual</p>
          </div>
          <div>
            <p class="small text-muted mb-1">Bags</p>
            <p class="">2</p>
          </div>
        </div>
        {{#if reserved}}
        <div class="d-flex justify-content-end align-items-center gap-4 p-1 w-100 pb-0">
          <h4 class="m-0">Reserved vehicle</h4>
          <a href="#" class="btn btn-primary px-4">Cancel</a>
        </div>
        {{else if currently}}
        <div class="d-flex justify-content-end align-items-center gap-4 p-1 w-100 pb-0">
          <h4 class="m-0">Current reservation</h4>
          <a href="#" class="btn btn-primary px-4">Report an issue</a>
        </div>
        {{else if oldRental}}
        <div class="d-flex justify-content-end align-items-center gap-4 p-1 w-100 pb-0">
          <h4 class="m-0">Old rental</h4>
          <a href="#" class="btn btn-primary px-4">Rate it</a>
        </div>
        {{else if canceled}}
        <div class="d-flex justify-content-end align-items-center gap-4 p-1 w-100 pb-0">
          <h4 class="m-0">Canceled</h4>
          <a href="#" class="btn btn-primary px-4">Reserve it</a>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>
