
<div class="mt-3 m-md-5 p-4 p-md-5 rounded border border-3 w-100">
  <form class="d-flex gap-2" role="search">
    <input type="search" class="form-control" placeholder="City" name="city" list="list-cities" autocomplete autofocus>
    <datalist id="list-cities">
        <option>Athens</option>
        <option>Thessaloniki</option>
        <option>Patras</option>
        <option>Piraeus</option>
        <option>Larissa</option>
        <option>Heraklion</option>
        <option>Volos</option>
        <option>Ioannina</option>
        <option>Trikala</option>
        <option>Serres</option>
        <option>Alexandroupoli</option>
    </datalist>

    <input type="datetime-local" class="form-control" placeholder="Rent date" name="dateFrom">
    <input type="datetime-local" class="form-control" placeholder="Return date" name="dateTo">
    <button class="btn btn-outline-primary" type="submit">Search</button>
  </form>
</div>

<div class="mx-lg-5 px-lg-5 w-100">
  {{>cards/brief title="Small" photo="/images/aston.jpg" id=1 price= "50.20"}}
  {{>cards/brief title="Medium" photo="/images/alfa.jpg" id=2 price= "130.99"}}
  {{>cards/brief title="Large" photo="/images/lambo.jpg" id=3 price= "420.00"}}
</div>
